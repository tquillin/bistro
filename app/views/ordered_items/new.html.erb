<%= stylesheet_link_tag    'ordered_items', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'ordered_items', 'data-turbolinks-track' => true %>




<div class="container">

          <div class="header">
              <h1>What would they like?</h1>
          </div>

          <div class="order">
            <%= form_for @ordered_item do |f| %>
            <%= f.label :name %>
            <%= f.collection_select :menu_item_id, MenuItem.all, :id, :name %>
            <%= f.label :table_number %>
            <%= f.collection_select :party_id, Party.all, :id, :table_number %>

              <%= f.submit "Submit Order"%>
            <% end %>
          </div>

</div>
